###
### LetsEncrypt challenge location
###

    server {
        listen      80 default_server;
{% if nginx_ipv6 | default(false) %}
        listen [::]:80 default_server;
{% endif %}

        server_name _;

        location /.well-known/acme-challenge {
            root {{ letsencrypt_web_root | default('/var/www/html') }};
        }

        location / {
            return 301 https://$host$request_uri;
        }
    }

