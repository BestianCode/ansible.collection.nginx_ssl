### Statistics

    server {
        listen              127.0.0.1:81 default_server;
        listen              [::1]:81 default_server;

        server_name         _;

        access_log          off;
        error_log           off;

        location /nginx_status {
            stub_status;
            allow           127.0.0.1;
            deny            all;
        }
    }

